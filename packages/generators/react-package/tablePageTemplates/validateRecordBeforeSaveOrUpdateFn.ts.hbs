import {
  validateObject,
  beautifyValidationErrorForUser
} from "@exsys-patient-insurance/validators";
import { RecordTypeWithAnyValue } from "@exsys-patient-insurance/types";

const validateRecordBeforeSaveOrUpdateFn = (record: RecordTypeWithAnyValue) => {
  const errors = validateObject([])(record);

  return beautifyValidationErrorForUser(errors);
};

export default validateRecordBeforeSaveOrUpdateFn;
