import { TableWithDefaultHeaderTools } from "@exsys-patient-insurance/table";
import createColumns from "../helpers/createColumns";
import createExcelSheetData from "../helpers/createExcelSheetData";
import ModalView from "./ModalView";

const ContentView = () => {
  const columns = React.useMemo(() => createColumns(), []);

  const excelDataFn = React.useCallback(createExcelSheetData(),[]);

  return (
    <>
      <TableWithDefaultHeaderTools
        columns={columns}
        excelDataFn={excelDataFn}
      />
      <ModalView />
    </>
  );
};

export default React.memo(ContentView);
